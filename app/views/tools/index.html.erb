<% provide(:title, 'Verktyg') %>
<div class="col-md-8 col-md-offset-2 col-sm-12 reg-page">
  <div class="headline">
    <h1>Sektionens verktyg</h1>
  </div>

  <%= link_to('Nytt verktyg', new_tool_path, class: 'btn primary') %>

  <ol class = "list-group">
    <% @all_tools.each do |tool| %>
      <li class = "list-group-item">
        <h4 class = "list-group-item-heading"><%= tool.title %></h4>
        <p class = "list-group-item-text"> <%= tool.description %></p>
      </li>
    <% end %>
  </ol>

</div>
