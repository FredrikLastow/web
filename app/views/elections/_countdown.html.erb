<% if election_view.present? %>
  <div class="countdown row">
    <h3><%= election_view.countdown_text %></h3>
    <div class="timer">
    </div>

  </div>
  <% if election_view.election.countdown.present? %>
    <%= javascript_tag do %>
      $(".timer").countdown('<%= l(election_view.election.countdown, format: '%Y/%m/%d %H:%M:%S %z') %>', function(event) {
        $(this).html(event.strftime('%D <%= t('.days') %> %H:%M:%S'));
      });
    <% end %>
  <% end %>
<% end %>
