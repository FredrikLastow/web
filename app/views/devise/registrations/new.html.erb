<div class="container">
	<div class="row">
		<%= devise_error_messages! %>
		<div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
			<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {class:  "reg-page", autofill: 'off'}, options: {autocomplete: 'off'}) do |f| %>
				
			  	<%= f.label 'Registrera ny användare', class:  'reg-header'%><br>
			  			  
			  	<div class="input-group margin-bottom-20">
					<span class="input-group-addon"><%= fa_icon('user')%></span>
					<%= f.text_field :username, class:  'form-control',:placeholder => 'Användarnamn', :autofocus => true%>
			  	</div>
			  	<div class="input-group margin-bottom-20">
		  	  		<span class="input-group-addon"><%= fa_icon('envelope')%></span> 	 		  	
			  		<%= f.email_field :email, class:  'form-control',:placeholder => 'E-postadress' %>
			  	</div>			  			  	
		  	  	<div class="input-group margin-bottom-20">		  	  		
		  	  		<span class="input-group-addon"><%= fa_icon('lock')%></span> 	 		  	
			  		<%= f.password_field :password, class:  'form-control',:placeholder => 'Nytt lösenord'%>
			  	</div>
			  	<div class="input-group margin-bottom-20">
		  	  		<span class="input-group-addon"><%= fa_icon('lock')%></span> 	 		  	
			  		<%= f.password_field :password_confirmation, class:  'form-control',:placeholder => 'Bekräfta lösenord' %>
			  	</div>	
			  	<%= f.label 'Personnummer', class:  'reg-label'%><br>
			  	För att kolla medlemskap - sparas ej.			  	
			  	<div class="input-group margin-bottom-20">
		  	  		<span class="input-group-addon"><%= fa_icon('bolt')%></span> 	 		  	
			  		<%= text_field_tag :civic, nil, class:  'form-control',:placeholder => 'Personnummer (10 siffor i följd)'%>
			  	</div>	
			  	<div class="row">
			  			<%= f.submit "Registrera",class:  'btn-u pull-right' %>
		  	  	</div>
		  	  	<%= render "devise/shared/links" %>
	  	  		<% end %>
		  	</div>
	  	</div>
	</div>
</div>
