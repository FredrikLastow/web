<% provide(:title, t('.title')) %>

<%= content_for(:greeting) do %>
    <h1><%= t('.hello', user: @user.to_s) %></h1>
<% end %>

<%= content_for(:main_content) do %>
    <%= simple_format(t('.reset_requested')) %>
    <%= simple_format(t('.reset_until', time: l(6.hours.from_now))) %>

    <p>
      <%= link_to(t('.change_password'), edit_password_url(@resource, reset_password_token: @token)) %>
    </p>

    <%= simple_format(t('.reset_not_you')) %>
    <%= simple_format(t('.reset_problem')) %>
<% end %>
