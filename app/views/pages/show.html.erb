<% provide(:title, @page.to_s) %>
<% if can_administrate?(:edit, @page) %>
  <%= link_to(t('page_element.new'),
              new_admin_page_page_element_path(@page), class: 'btn primary') %>
  <%= link_to(t('page_element.index'),
              admin_page_page_elements_path(@page), class: 'btn secondary') %>
  <%= link_to(t('page.edit'),
              edit_admin_page_path(@page), class: 'btn secondary') %>
  <hr>
<% end %>

<%= render(@page, title: true) %>
