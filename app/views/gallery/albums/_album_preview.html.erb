<% if album.images.count > 0 %>
  <div class="col-md-4 col-sm-4 col-xs-6">
    <%= link_to(gallery_album_path(album), data: { no_turbolink: true }) do %>
      <div class="preview-wrap">
        <div class="thumb">
          <% if album.images.count > 0 %>
            <%= image_tag(album.images.sample.try(:thumb)) %>
          <% end %>
        </div>
        <div class="caption">
          <h3 class="title">
            <%= album.title %>
          </h3>
          <span class="date">
            <%= fa_icon('calendar') %> <%= album.to_date %>
          </span>
          <span class="location">
            <%= fa_icon('map-marker') %> <%= album.location %>
          </span>
          <span class="image-count">
            <%= fa_icon('image') %> <%= album.images.count %>
          </span>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
