<% description(t('.description')) %>
<% keywords(t('.keywords')) %>
 <div class="nollning">
  <div class="headline">
    <h1><%= title(t('.title')) %></h1>
  </div>

  <div class="col-md-12 nollning-paragraph">
    <%= t('.info',
          checklist: link_to(t('.this_checklist'), '/sida/checklista'),
          more_info: link_to(t('.here'), '/sida/vadarnollningen')).html_safe %>
  </div>
  <div class="col-md-12 nollning-paragraph"><%= t('.info2') %></div>
  <div class="col-md-12 nollning-paragraph"><%= t('.info3') %></div>

  <% if @news.present? %>
    <div class="col-md-7 nollning-news">
      <div class="headline">
        <h2><%= t('.news') %></h2>
      </div>

      <% @news.each do |n| %>
        <%= render '/news/news', news: n %>
      <% end %>

      <%= link_to news_index_path(category: :nollning) do%>
        <%= fa_icon('plus') %> <%= t('.more_news') %>
      <% end %>
    </div>
  <% end %>

  <div class="col-md-7">
    <% if @constant.present? %>
      <div class="headline">
        <h2><%= t('.theme_movie') %></h2>
      </div>
      <iframe width="560" height="315" src="<%= @constant.value %>" frameborder="0" allowfullscreen></iframe>
    <% end %>
  </div>
</div>
