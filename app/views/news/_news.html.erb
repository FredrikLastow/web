<div class="news">
  <h4>
    <%= link_to(news, news_path(news)) %>
    <% if news.image.present? %>
      <%= fa_icon('image') %>
    <% end %>
  </h4>
  <%= truncate(markdown_plain(news.content),
               length: 140,
               separator: ''){ link_to(t(:read_more), news_path(news))} %>

   <%= news_url(news) %>

   <% if news.categories.count > 0 %>
     <span class="categories">
       <%= fa_icon('hashtag') %> 
       <% news.categories.each do |cat| %>
         <%= link_to(cat.title, news_index_path(category: cat.to_param)) %> <%= ' ' %>
       <% end %>
     </span>
   <% end %>

   <span class="date">
     <%= fa_icon('calendar') %> <%= l(news.created_at) %>
   </span>

   <%= news_user(news) %>

   <% if can_administrate?(:modify, news) %>
     <span class="edit">
       <%= link_to(edit_admin_news_path(news)) do %>
         <%= fa_icon('cog') %> <%= t(:edit) %>
       <% end %>
     </span>
   <% end %>
   <hr>
</div>
