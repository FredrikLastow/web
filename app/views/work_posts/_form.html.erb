<%= simple_form_for(@work_post) do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :company %>
  <%= f.input :category %>
  <%= f.input :kind %>
  <%= f.input :for %>
  <%= f.input :link %>
  <%= f.input :visible %>
  <%= f.input :deadline, as: :datetime_picker %>
  <%= f.input :publish, as: :datetime_picker %>
  <%= f.input :picture %>
  <% if @work_post.picture_file_name%>
    <%= image_tag(@work_post.picture(:view),class: "img-responsive")%>
  <% end %>
  <%= f.button :submit, class: "btn btn-u" %>
<% end %>
