<% provide(:title, model_name(Rent)) %>
<div class='col-md-8 col-md-offset-2 col-sm-12 reg-page'>
    <%= render 'form' %>
    <hr>
    <% if @rent.edit?(current_user) %> 
    <%= link_to(t('rent.remove'), rent_path(@rent), method: :delete, class: 'btn danger',
                data: { confirm: t('rent.confirm_remove')}) %>
    <% end %>

    <% if can? :manage, @rent %>
      <%= link_to(t('administrate'), admin_rent_path(@rent)) %>
    <% end %>

    <%= link_to(t('rent.back_to_index'), rents_path, class: 'btn secondary') %>
</div>
