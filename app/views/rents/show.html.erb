<% provide(:title, model_name(Rent)) %>
<div class="col-md-8 col-md-offset-2 col-xs-12 reg-page">
  <div class="headline">
    <h2><%=  model_name(Rent) %></h2>
  </div>

  <% if @rent %>
    <%= render @rent %>
    <% if can? :edit, @rent %>
      <%= link_to(t(:edit_attr, attr: model_name(Rent)), edit_rent_path(@rent), class: 'btn primary') %>
      <hr>
    <% end %>
    <%= link_to(t(:index_attr, attr: models_name(Rent)), rents_path, class: 'btn secondary') %>
    <% if can? :manage, Rent %>
      <%= link_to(t('administrate'), admin_rent_path(@rent), class: 'btn secondary') %>
    <% end %>
  <% end %>
</div>
