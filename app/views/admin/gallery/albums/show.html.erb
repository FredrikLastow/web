<div class="col-md-8 col-md-offset-2 col-sm-12 reg-page">
  <div class="headline">
    <h1><%= title(t('album.edit')) %></h1>
  </div>
  <%= render 'form' %>
  <hr>
  <%= link_to(t('album.show'), gallery_album_path(@album),
                               data:{ no_turbolink: true }, class: 'btn secondary') %>
  <%= link_to(t('album.destroy'), admin_gallery_album_path(@album),
                                  method: :delete,
                                  class: 'btn danger') %>
  <%= link_to(t('gallery.destroy_images'), destroy_images_admin_gallery_album_path(@album),
                                           method: :delete,
                                           class: 'btn danger',
                                           data: { confirm: t('gallery.destroy_images')+ '?' }) %>
  <%= link_to(t('gallery.title'), admin_gallery_albums_path, class: 'btn secondary') %>
  <hr>
  <% @album.images.each do |img| %>
    <% if img.id.present? %>
      <div class="col-md-2 col-xs-4">
        <%= link_to(admin_gallery_album_image_path(@album, img)) do %>
          <%= image_tag(img.thumb, class: 'img-resposive album-preview') %>
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>
