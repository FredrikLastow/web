<div class="col-md-8 col-md-offset-2 col-sm-12 reg-page">
  <h3 class="headline headline-md">
    <%= t(:edit, attr: Album.model_name.human) %>
  </h3>
  <%= render 'form'%>
  <hr>
  <%= link_to(t(:show_attr, attr: model_name(Album)), gallery_album_path(@album), data:{ no_turbolink: true }, class: 'btn secondary') %>
  <%= link_to(t(:destroy_attr, attr: model_name(Album)), admin_gallery_album_path(@album), method: :delete, class: 'btn danger') %>
  <%= link_to(t('gallery.title'), admin_gallery_albums_path, class: 'btn secondary') %>
  <hr>
  <% @album.images.each do |img| %>
    <div class="col-xs-2">
      <%= link_to(admin_gallery_album_image_path(@album, img)) do %>
        <%= image_tag(img.thumb, class: 'img-resposive album-preview') %>
      <% end %>
    </div>
  <% end %>
</div>
