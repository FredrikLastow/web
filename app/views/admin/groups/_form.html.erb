<%= simple_form_for([:admin, group]) do |f| %>
  <%= f.input :name %>
  <%= f.input :number %>
  <%= f.association :introduction, collection: Introduction.by_start, label_method: :to_s %>
  <%= f.association :users, collection: User.by_firstname.confirmed,
                            input_html: { class: 'select2' },
                            include_blank: false %>
  <%= f.button :submit %>
<% end %>
