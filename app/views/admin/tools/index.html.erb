<% provide(:title, t('tool.title')) %>
<div class="col-md-8 col-md-offset-2 col-sm-12 reg-page">
  <div class="headline">
    <h1><%= t('tool.title') %></h1>
  </div>
  <%= link_to(t('tool.new'), new_admin_tool_path, class: 'btn primary') %>

  <div class = "list-group">
    <% @all_tools.each do |tool| %>
      <% if tool.free == 0 %>
        <a href="<%= edit_admin_tool_path(tool) %>" class = "list-group-item list-group-item-danger">
      <% else %>
        <a href="<%= edit_admin_tool_path(tool) %>" class = "list-group-item">
      <% end %>
        <h4 class = "list-group-item-heading"><%= tool.title %></h4>
        <span class="badge"><%= tool.free %></span>
        <p class = "list-group-item-text"><%= tool.description %></p>
      </a>
    <% end %>
  </div>

</div>
