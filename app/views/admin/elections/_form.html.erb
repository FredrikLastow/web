<%= simple_form_for([:admin, @election]) do |f| %>
  <%= f.input :title %>
  <%= f.input :start, as: :datetime_picker %>
  <%= f.input :end, as: :datetime_picker %>
  <%= f.input :closing, as: :datetime_picker %>
  <%= f.input :url %>
  <%= f.input :description %>
  <%= f.input :mail_styrelse_link %>
  <%= f.input :mail_link %>
  <%= f.input :visible %>
  <%= f.button :submit %>
  <% unless @election.new_record? %>
    <%= link_to(t('elections.edit_texts'), edit_admin_election_path(@election),
                                           target: :blank,
                                           class: "btn btn-default") %>
  <% end%>
  <% if @posts %>
    <%= f.association :posts, collection: @posts,
                              input_html: { multiple: true },
                              as: :check_boxes %>
  <% end %>
<% end %>
