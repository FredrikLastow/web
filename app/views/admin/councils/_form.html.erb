<%= simple_form_for([:admin, council]) do |f| %>
  <%= f.input :title %>
  <%= f.input :description, hint: t('council.description_hint') %>
  <%= f.input :url %>

  <% if council.posts.count > 0 %>
    <%= f.association :president, collection: council.posts,
                                  input_html: { class: 'select2' } %>
  <% elsif council.persisted? %>
    <%= simple_format(t('council.no_posts'))%>
  <% end %>

  <%= f.button :submit %>
<% end %>
