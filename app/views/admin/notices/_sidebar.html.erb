<% notice ||= nil %>
<div class="list-group sidebar-nav">
  <%= link_to(admin_notices_path, class: active_list_group(:index, current)) do %>
    <%= fa_icon('list', text: t('.all_notices')) %>
  <% end %>

  <%= link_to(new_admin_notice_path, class: active_list_group(:new, current)) do %>
    <%= fa_icon('plus', text: t('.new')) %>
  <% end %>

  <% if notice.present? %>
    <%= link_to(edit_admin_notice_path(notice), class: active_list_group(:edit, current)) do %>
      <%= fa_icon('cog', text: t('.edit')) %>
    <% end %>
  <% end %>
</div>
