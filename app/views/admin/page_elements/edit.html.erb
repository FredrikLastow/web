<div class="col-md-8 col-sm-12">
  <div class="headline">
    <h1><%= title(t('page_element.edit')) %></h1>
  </div>

  <%= render 'form', page: @page, page_element: @page_element %>
  <hr>

  <div class="row">
    <%= link_to(t('page_element.new'), new_admin_page_page_element_path(@page),
                                       class: 'btn secondary')%>
    <%= link_to(t('page_element.index'), admin_page_page_elements_path(@page),
                                         class: 'btn secondary')%>
    <%= link_to(t('page.edit'), edit_admin_page_path(@page),
                                class: 'btn secondary') %>
    <%= link_to(t('page.show'), page_path(@page),
                                class: 'btn secondary') %>
  </div>

  <% if @page_element.element_type == PageElement::IMAGE %>
    <%= render 'image_preview', page: @page %>
  <% end %>

</div>

<div class="col-md-4 col-sm-12">
  <%= render 'index_preview', page: @page %>
</div>
