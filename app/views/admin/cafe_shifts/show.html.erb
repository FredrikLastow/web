<% provide(:title, t('cafe_work.admin_title')) %>
<div class="col-md-6 col-md-offset-3">
  <div class="headline">
    <h2><%= %(#{CafeShift.model_name.human} - ID #{@cafe_shift.id}) %></h2>
  </div>
  <table class="table">
    <tr>
      <td><%= CafeShift.human_attribute_name(:work_day) %></td>
      <td><%= time_range(@cafe_shift.start, @cafe_shift.stop, format: :long) %></td>
    </tr>
    <tr>
      <td><%= CafeShift.human_attribute_name(:lv) %></td>
      <td><%= @cafe_shift.lv %></td>
    </tr>
    <tr>
      <td><%= CafeShift.human_attribute_name(:lp) %></td>
      <td><%= @cafe_shift.lp %></td>
    </tr>
  </table>
  <hr>
  <%= render 'cafe/workers/form', cafe_shift: @cafe_shift %>
  <hr>
  <%= link_to(t('cafe_work.remove_work'), admin_cafe_shift_path(@cafe_shift), method: :delete, class: 'btn danger pull-right') %>
</div>
