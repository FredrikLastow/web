<% if post_view.present? %>
  <%= grid(post_view.post_user_grid) do |g|
    g.row_attributes do |post_user|
      {id: dom_id(post_user)}
    end

    g.column(name: model_name(Post), assoc: :post, attribute: 'title')
    g.column(name: model_name(User), assoc: :user, attribute: 'firstname') do |pu|
      user_link(pu.user)
    end

    g.column(name: t(:destroy)) do |pu|
      link_to(t(:destroy), remove_user_admin_council_posts_path(post_view.council, pu),
                           remote: true,
                           method: :delete)
    end
  end -%>
<% end %>
