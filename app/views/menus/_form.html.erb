<%= simple_form_for(@menu) do |f| %>
  <%= f.input :location, collection: [[t('menu.guild'), :guild], [t('menu.members'), :members], [t('menu.companies'), :companies], [t('menu.contact'), :contact]] %>
  <%= f.input :index %>
  <%= f.input :name %>
  <%= f.input :link %>
  <%= f.input :visible %>
  <%= f.input :turbolinks %>
  <%= f.input :blank_p %>
  <%= f.button :submit, class: 'btn btn-u', id: :menu_id %>
<% end %>
