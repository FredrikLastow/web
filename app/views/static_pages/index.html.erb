<%= content_for :pre_content do %>
  <div class="carousel slide carousel-v1 margin-bottom-20 margin-top-20" id="myCarousel-1">
    <div class="carousel-inner">
      <div class="item active">
        <div class="start-background" style="background: <%=image_url("img/bg.jpg") %>">
          <div class="container">
            <h1><%= t('front.welcome') %></h1>
            <p><%= t('front.below-welcome') %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

<!--Mini News-->
<div class="col-md-5">
  <div class="headline headline-md"><h3><%= News.model_name.human(count: 2) %></h3></div>
  <%= render @news%>
  <%= link_to news_index_path do%>
    <i class="fa fa-plus"></i> <%= t('news.more') %>
  <%end%>
</div>

<div class="col-md-7">
  <%= render @notices%>
</div>

