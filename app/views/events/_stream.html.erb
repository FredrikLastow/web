<% if events.count > 0 %>
  <div class="event stream">
    <div class="headline">
      <h3>
        <%= t('event.stream') %>
      </h3>
    </div>

    <% events.group_by(&:day).each do |day, ev| %>
      <span class="weekday-wrap">
        <span class='weekday'>
          <% if day.day == Time.zone.now.day %>
            <%= t(:today).capitalize %>:
          <% else %>
            <%= l(day, format: '%A').capitalize %>:
          <% end %>
        </span>
        <% ev.each do |e| %>
          <span class="event-wrap">
            <span class='date'>
              <%= l(e.starts_at, format: :time) %>
            </span>
            <span class='title'>
              <%= link_to(e.short_title.truncate(20), event_path(e)) %>
            </span>
          </span>
        <% end %>
      </span>
      <br>
    <% end %>
  </div>
  <hr>
<% end %>
