<%= simple_form_for(@council) do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :url %>
  <%= f.input :public %>
  <% if @council.posts.count > 0 %>
    <%= f.association :president %>
  <% elsif not @council.new_record? %>
    <%= simple_format(t('councils.no_posts'))%>
  <% end %>
  <%= f.button :submit %>
<% end %>
