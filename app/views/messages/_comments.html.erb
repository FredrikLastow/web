<% if message.message_comments.any? %>
  <h4>
    <%= fa_icon('comment') %>
    <%= t('.title') %>
  </h4>
  <% message.message_comments.each do |comment| %>
    <%= render '/messages/comment', comment: comment, admin: admin %>
  <% end %>
<% end %>
<div class="comment new">
  <%= simple_form_for(comment_form_for(message, admin)) do |f| %>
    <%= f.input :content, as: :string, required: false, label: t('.new_comment') %>
  <% end %>
</div>
