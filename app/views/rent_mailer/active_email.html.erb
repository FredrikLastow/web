<%= content_for :title do %>
  <%= t('.title') %>
<% end %>

<%= content_for :greeting do %>
  <h3><%= %(#{t(:hello)} #{@rent.user}) %></h3>
<% end %>

<%= content_for :main_content do %>
  <% if @rent.aktiv %>
    <%= simple_format(t('.marked_active_text')) %>
  <% else %>
    <%= simple_format(t('.marked_inactive_text')) %>
  <% end %>

  <%= render 'attributes', rent: @rent %>
<% end %>

<%= content_for :bottom_signature do %>
  <%= simple_format(t('rent_mailer.mailer.answer_with_questions')) %>
  <p><%= t(:sincerely) %>,<br>
  <%= t('rent_mailer.mailer.car_foreman') %></p>
<% end %>
