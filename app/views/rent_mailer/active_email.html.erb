<%= content_for :title do %>
  <%= Rent.model_name.human %>
<% end %>

<%= content_for :greeting do %>
  <h3><%= %(#{t(:hello)} #{@rent.user}) %></h3>
<% end %>

<%= content_for :main_content do %>
  <% if !@rent.aktiv %>
    <%= simple_format(t('rent.mailer.marked_inactive_text')) %>
  <% else %>
    <%= simple_format(t('rent.mailer.marked_active_text')) %>
  <% end %>

  <%= render 'attributes', rent: @rent %>
<% end %>

<%= content_for :bottom_signature do %>
  <%= simple_format(t('rent.mailer.signature_questions')) %>
  <p><%= t(:sincerely) %>,<br>
  <%= t('rent.foreman') %></p>
<% end %>
