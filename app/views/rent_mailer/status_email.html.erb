<%= content_for :title do %>
  <%= Rent.model_name.human %>
<% end %>

<%= content_for :greeting do %>
  <h3><%= %(#{t(:hello)} #{@rent.user}) %></h3>
<% end %>

<%= content_for :main_content do %>
  <p><%= t('rent.mailer.booking_status') %> <%= t(%(rent.#{@rent.status})) %>.</p>
  <% if @rent.status == 'denied' %>
    <%= simple_format(Rent.human_attribute_name(:comment)) %>
    <%= simple_format(@rent.comment) %>
    <%= t('rent.mailer.denied_appeal') %>
  <% end %>

  <%= render 'attributes', rent: @rent %>
<% end %>

<%= content_for :bottom_signature do %>
  <%= simple_format(t('rent.mailer.signature_questions')) %>
  <p><%= t(:sincerely) %>,<br>
  <%= t('rent.foreman') %></p>
<% end %>
