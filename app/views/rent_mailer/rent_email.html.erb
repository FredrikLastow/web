<%= content_for :title do %>
  <%= Rent.model_name.human %>
<% end %>

<%= content_for :greeting do %>
  <h3><%= %(#{t(:hello)} #{@rent.user}) %></h3>
<% end %>

<%= content_for :main_content do %>
  <%= simple_format(t('rent.mailer.booked')) %>
  <%= render 'attributes', rent: @rent %>

  <% if @rent.status != 'confirmed' %>
    <%= simple_format(t('rent.mailer.confirm_foreman')) %>
  <% end %>
<% end %>

<%= content_for :bottom_signature do %>
  <%= simple_format(t('rent.mailer.signature_questions')) %>
  <p><%= t(:sincerely) %>,<br>
  <%= t('rent.foreman') %></p>
<% end %>
